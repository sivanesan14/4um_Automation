<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.4um</groupId>
	<artifactId>4um_BDD_Framework</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<properties>
		<project.name>4um_BDD_Framework</project.name>
		<maven.compiler.version>3.11.0</maven.compiler.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<codeid.fillo.version>1.16</codeid.fillo.version>
		<commons-io.version>1.3.2</commons-io.version>
		<org.json.version>20200518</org.json.version>
		<testng.version>7.1.0</testng.version>
		<aspectj.version>1.9.4</aspectj.version>
		<playwright.version>1.35.0</playwright.version>
		<browserInstances>1</browserInstances>
		<selenium.version>3.141.59</selenium.version>
		<appium.version>7.3.0</appium.version>
		<cucumber.version>7.4.1</cucumber.version>
		<rest-assured.version>4.0.0</rest-assured.version>
		<jackson-databind.version>2.9.8</jackson-databind.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>default-clean</id>
						<phase>clean</phase>
						<goals>
							<goal>clean</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-install-plugin</artifactId>
				<version>3.0.0-M1</version>
				<executions>
					<execution>
						<id>default-install</id>
						<phase>install</phase>
						<goals>
							<goal>install</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
					<systemPropertyVariables>
						<Browser>${Browser}</Browser>
						<Dimension>${Dimension}</Dimension>
						<execType>${execType}</execType>
						<suiteXMLFile>${suiteXMLFile}</suiteXMLFile>
						<mobileExecutionType>${mobileExecutionType}</mobileExecutionType>
						<applicationName>${applicationName}</applicationName>
						<extent.reporter.html.start>true</extent.reporter.html.start>
						<extent.reporter.html.out>Reports/ExtentHtml.html</extent.reporter.html.out>
						<extent.reporter.html.config>
							src/test/resources/Configs/extent-config.xml</extent.reporter.html.config>
					</systemPropertyVariables>
					<suiteXmlFiles>
						<suiteXmlFile>src/test/resources/NG_XMLs/${suiteXMLFile}</suiteXmlFile>
					</suiteXmlFiles>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.aspectj</groupId>
						<artifactId>aspectjweaver</artifactId>
						<version>${aspectj.version}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>net.masterthought</groupId>
				<artifactId>maven-cucumber-reporting</artifactId>
				<version>5.7.0</version>
				<executions>
					<execution>
						<id>execution</id>
						<phase>verify</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<projectName>${project.name}</projectName>
							<checkBuildResult>false</checkBuildResult>
							<outputDirectory>target/site/cucumber-pretty</outputDirectory>
							<inputDirectory>target/cucumber</inputDirectory>
							<checkBuildResult>false</checkBuildResult>
							<jsonFiles>
								<param>**/*.json</param>
							</jsonFiles>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

